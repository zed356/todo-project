// https://github.com/microsoft/vscode/issues/66937#issuecomment-475087628

{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
